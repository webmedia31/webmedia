{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm run build && rmdir functions/nuxt /s /q && copy -r .nuxt/ functions/ && copy nuxt.config.js functions/"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
